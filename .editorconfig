# EditorConfig is awesome: https://editorconfig.org
# top-most EditorConfig file
root = true

# Lua files
[*.lua]
indent_style = space
indent_size = 4
continuation_indent = 4
quote_style = none  # Options: none, single, double
max_line_length = 120
trailing_table_separator = keep  # Options: keep, never, always, smart
call_arg_parentheses = keep  # Options: keep, remove, remove_table_only, remove_string_only
insert_final_newline = true
space_around_table_field_list = true
space_before_attribute = true
space_before_function_open_parenthesis = false
space_before_function_call_open_parenthesis = false
space_before_closure_open_parenthesis = true
space_before_function_call_single_arg = true
space_before_open_square_bracket = false
